{
  "name": "gdrive-sync-app",
  "version": "0.1.0",
  "description": "Cross-platform Google Drive sync app - Mac & Linux",
  "main": "dist-main/main/index.js",
  "author": "Flexteam",
  "license": "MIT",
  "scripts": {
    "dev": "npm run build:main && concurrently \"npm run dev:vite\" \"wait-on http://localhost:5173 && npx electron .\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "npm run build:vite && npm run build:main",
    "build:vite": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "preview": "vite preview",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "dotenv": "^17.3.1",
    "electron-store": "^8.1.0",
    "googleapis": "^128.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.flexteam.gdrive-sync",
    "productName": "GDrive Sync",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-main/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
